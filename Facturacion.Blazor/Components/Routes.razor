@using Facturacion.Blazor.Components
@using Facturacion.Blazor.Components.Layout
@using Microsoft.AspNetCore.Components.Authorization
@using Facturacion.Blazor.Pages
@using Facturacion.Blazor.Components.Shared 

<Router AppAssembly="@typeof(Program).Assembly">
  <Found Context="routeData">
    <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
      <NotAuthorized>
        
        <RedirectTo Href="/" />
      </NotAuthorized>
      <Authorizing>
        <p class="my-4">Verificando permisos…</p>
      </Authorizing>
    </AuthorizeRouteView>
  </Found>
  <NotFound>
    <Error />
  </NotFound>
</Router>