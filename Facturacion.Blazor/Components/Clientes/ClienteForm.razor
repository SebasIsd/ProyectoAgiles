@using System.ComponentModel.DataAnnotations
@namespace Facturacion.Blazor.Components.Clientes


@code{
  [Parameter] public ClienteVm Model { get; set; } = new();
  [Parameter] public EventCallback OnSave { get; set; }
  [Parameter] public EventCallback OnCancel { get; set; }

  public class ClienteVm{
    public int Id { get; set; }
    [Required, StringLength(100)] public string Nombre { get; set; } = "";
    [Required, EmailAddress] public string Correo { get; set; } = "";
    [Phone] public string? Telefono { get; set; }
    [StringLength(200)] public string? Direccion { get; set; }
  }
}
<EditForm Model="@Model" OnValidSubmit="@OnSave">
  <DataAnnotationsValidator />
  <div class="row g-3">
    <div class="col-md-6">
      <label class="form-label">Nombre</label>
      <InputText class="form-control" @bind-Value="Model.Nombre" />
      <ValidationMessage For="()=>Model.Nombre" />
    </div>
    <div class="col-md-6">
      <label class="form-label">Correo</label>
      <InputText class="form-control" @bind-Value="Model.Correo" />
      <ValidationMessage For="()=>Model.Correo" />
    </div>
    <div class="col-md-6">
      <label class="form-label">Teléfono</label>
      <InputText class="form-control" @bind-Value="Model.Telefono" />
    </div>
    <div class="col-md-6">
      <label class="form-label">Dirección</label>
      <InputText class="form-control" @bind-Value="Model.Direccion" />
    </div>
  </div>
  <div class="mt-3 d-flex gap-2">
    <button class="btn btn-primary" type="submit">Guardar</button>
    <button class="btn btn-secondary" type="button" @onclick="OnCancel">Cancelar</button>
  </div>
</EditForm>
