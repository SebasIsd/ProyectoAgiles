@inject Facturacion.Blazor.Services.AuthService AuthService
@inject NavigationManager Navigation


<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Facturacion.Blazor</a>
    </div>


    <AuthorizeView>
        <Authorized>
            <span class="text-white me-3">Hola, @context.User.Identity?.Name</span> 

            <button class="btn btn-outline-light btn-sm me-2" @onclick="HandleLogout">
                Salir
            </button>
        </Authorized>
        <NotAuthorized>
            <NavLink class="nav-link btn btn-primary text-white" href="login">
                Ingresar
            </NavLink>
        </NotAuthorized>
    </AuthorizeView>
    
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
            </NavLink>
        </div>
    </nav>
</div>


@code {
    private async Task HandleLogout()
    {
        AuthService.Logout();
        await Task.Delay(50);
        
        Navigation.NavigateTo("/", true); 
    }
}