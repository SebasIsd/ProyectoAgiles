@page "/lotes/nuevo"
@using Facturacion.Blazor.Services
@using Facturacion.Application.DTOs
@using Facturacion.Application.Interfaces
@using System.ComponentModel.DataAnnotations
@using Facturacion.Blazor.Models
@inject NavigationManager Nav
@inject LoteState LoteState
@inject IProductoService ProductoService

<PageTitle>Nuevo Lote</PageTitle>

<h3 class="mb-3">Nuevo Lote de Producto</h3>

@if (cargando)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else if (modelo != null)
{
    <EditForm Model="@modelo" OnValidSubmit="@Guardar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="card mb-3">
            <div class="card-header">Datos del producto y lote</div>
            <div class="card-body">

                <!-- PRODUCTO Y FECHAS -->
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Producto</label>
                        <InputSelect class="form-select" @bind-Value="modelo.ProductoId">
                            <option value="0">-- Seleccione un producto --</option>
                            @foreach (var p in productos)
                            {
                                <option value="@p.Id">@p.Codigo - @p.Nombre</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => modelo.ProductoId)" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Código de Lote</label>
                        <InputText class="form-control" @bind-Value="modelo.Lote" />
                        <ValidationMessage For="@(() => modelo.Lote)" />
                        <small class="form-text text-muted">Ej: L2024-001</small>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Fecha de ingreso</label>
                        <InputDate class="form-control"
                                   DateFormat="dd/MM/yyyy"
                                   @bind-Value="modelo.FechaIngreso" />
                        <ValidationMessage For="@(() => modelo.FechaIngreso)" />
                    </div>
                </div>

                <!-- FECHA VENCIMIENTO -->
                <div class="row g-3 mt-2">
                    <div class="col-md-3">
                        <label class="form-label">Fecha de vencimiento (opcional)</label>
                        <InputDate class="form-control"
                                   DateFormat="dd/MM/yyyy"
                                   @bind-Value="modelo.FechaVencimiento" />
                    </div>
                </div>

                <!-- COSTOS Y CANTIDADES -->
                <div class="row g-3 mt-2">
                    <div class="col-md-3">
                        <label class="form-label">Precio compra</label>
                        <InputNumber class="form-control" @bind-Value="modelo.PrecioCompra" />
                        <ValidationMessage For="@(() => modelo.PrecioCompra)" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Precio venta</label>
                        <InputNumber class="form-control" @bind-Value="modelo.PrecioVenta" />
                        <ValidationMessage For="@(() => modelo.PrecioVenta)" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Cantidad</label>
                        <InputNumber class="form-control" @bind-Value="modelo.Cantidad" />
                        <ValidationMessage For="@(() => modelo.Cantidad)" />
                    </div>
                </div>

                <!-- IMPORTACIÓN -->
                <div class="row g-3 mt-3">
                    <div class="col-md-3 d-flex align-items-center">
                        <div class="form-check">
                            <InputCheckbox class="form-check-input"
                                           @bind-Value="modelo.EsImportado" />
                            <label class="form-check-label">
                                Lote importado
                            </label>
                        </div>
                    </div>

                    @if (modelo.EsImportado)
                    {
                        <div class="col-md-4 d-flex align-items-center">
                            <div class="form-check">
                                <InputCheckbox class="form-check-input"
                                               @bind-Value="modelo.EsImportacion4x4" />
                                <label class="form-check-label">
                                    Importación 4x4 (≤ 4kg, ≤ $400)
                                </label>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">
                Cancelar
            </button>
            <button type="submit" class="btn btn-primary" disabled="@guardando">
                @if (guardando)
                {
                    <span class="spinner-border spinner-border-sm" role="status"></span>
                }
                Guardar lote
            </button>
        </div>
    </EditForm>
}

@code {
    private CrearLoteViewModel? modelo;
    private bool cargando = true;
    private bool guardando = false;
    private List<ProductoComboDto> productos = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Inicializar el modelo PRIMERO
            modelo = new CrearLoteViewModel
            {
                FechaIngreso = DateTime.Today
            };

            await CargarProductos();
            cargando = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error en inicialización: {ex.Message}");
            // Puedes mostrar un mensaje de error al usuario aquí
        }
    }

    private async Task CargarProductos()
    {
        try
        {
            productos = await ProductoService.GetComboProductosAsync() ?? new List<ProductoComboDto>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando productos: {ex.Message}");
            productos = new List<ProductoComboDto>();
        }
    }

    private async Task Guardar()
    {
        if (modelo == null) return;

        guardando = true;
        StateHasChanged();

        try
        {
            // Crear el DTO para el backend
            var crearLoteDto = new CrearLoteDto
            {
                ProductoId = modelo.ProductoId,
                Lote = modelo.Lote ?? string.Empty,
                PrecioCompra = modelo.PrecioCompra,
                PrecioVenta = modelo.PrecioVenta,
                Cantidad = modelo.Cantidad,
                FechaVencimiento = modelo.FechaVencimiento
            };

            // Llamar al servicio del backend
            var userId = 1; // Cambiar por el ID del usuario autenticado
            await ProductoService.CrearLoteAsync(crearLoteDto, userId);
            
            Nav.NavigateTo("/lotes");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al guardar: {ex.Message}");
            guardando = false;
            StateHasChanged();
        }
    }

    private void Cancelar() => Nav.NavigateTo("/lotes");

    // === ViewModel COMPLETAMENTE INICIALIZADO ===
    private class CrearLoteViewModel
    {
        [Required(ErrorMessage = "El producto es obligatorio")]
        [Range(1, int.MaxValue, ErrorMessage = "Seleccione un producto válido")]
        public int ProductoId { get; set; } = 0;

        [Required(ErrorMessage = "El código de lote es obligatorio")]
        [StringLength(50, ErrorMessage = "El código no puede exceder 50 caracteres")]
        public string Lote { get; set; } = string.Empty;

        [Required(ErrorMessage = "La fecha de ingreso es obligatoria")]
        public DateTime FechaIngreso { get; set; } = DateTime.Today;

        public DateTime? FechaVencimiento { get; set; } = null;

        [Required(ErrorMessage = "El precio de compra es obligatorio")]
        [Range(0.01, double.MaxValue, ErrorMessage = "El precio de compra debe ser mayor a 0")]
        public decimal PrecioCompra { get; set; } = 0.01m;

        [Required(ErrorMessage = "El precio de venta es obligatorio")]
        [Range(0.01, double.MaxValue, ErrorMessage = "El precio de venta debe ser mayor a 0")]
        public decimal PrecioVenta { get; set; } = 0.01m;

        [Required(ErrorMessage = "La cantidad es obligatoria")]
        [Range(1, int.MaxValue, ErrorMessage = "La cantidad debe ser mayor a 0")]
        public int Cantidad { get; set; } = 1;

        // Campos de importación (para UI, no se envían al backend)
        public bool EsImportado { get; set; } = false;
        public bool EsImportacion4x4 { get; set; } = false;
    }
}