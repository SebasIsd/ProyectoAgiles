@page "/clientes/lista"
@attribute [Authorize]
@using Facturacion.Application.DTOs
@using Facturacion.Blazor.Services

<PageTitle>Clientes</PageTitle>

<div class="d-flex gap-2 mb-3">
    <a href="/clientes/nuevo" class="btn btn-primary">Nuevo Cliente</a>
    <button class="btn btn-outline-secondary ms-2" @onclick="Cargar">Refrescar</button>
    <div class="input-group" style="max-width:320px">
        <button class="btn btn-outline-secondary" type="button" @onclick="AplicarFiltro">
            <i class="bi bi-search"></i>
        </button>
        <input class="form-control"
               placeholder="Buscar por cliente o # de Identificacion"
               @bind="SearchText"
               @bind:event="oninput" />
    </div>
</div>


@* 💡 Usamos clientesFiltrados para mostrar los datos *@
@if (clientesFiltrados == null)
{
    <p>Cargando...</p>
}
else if (!clientesFiltrados.Any())
{
    <p>No hay clientes registrados que coincidan con la búsqueda.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Identificación</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @* 💡 Iteramos sobre la lista filtrada *@
            @foreach (var c in clientesFiltrados)
            {
                <tr>
                    <td>@c.TipoIdentificacion</td>
                    <td>@c.Identificacion</td>
                    <td>@c.Nombre</td>
                    <td>@c.Email</td>
                    <td>@c.Telefono</td>
                    <td>@c.Direccion</td>
                    <td class="text-end">
                        <a href="/clientes/editar/@c.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => Desactivar(c.Id)">Desactivar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Inject] ClienteApi Api { get; set; } = default!;
    private List<ClienteDto>? clientes; // Lista original, no se modifica
    private List<ClienteDto>? clientesFiltrados; // Lista que se muestra en la tabla

    protected override async Task OnInitializedAsync()
    {
        await Cargar();
    }

    private async Task Cargar()
    {
        // 1. Cargar datos de la API
        clientes = await Api.ListarAsync();
        Console.WriteLine($"Clientes cargados: {clientes?.Count ?? 0}");

        // 2. Aplicar el filtro (o mostrar todos si no hay texto de búsqueda)
        AplicarFiltro();

        // 3. Notificar a Blazor que la UI debe actualizarse
        StateHasChanged();
    }

    private async Task Desactivar(int id)
    {
        await Api.DesactivarAsync(id);
        await Cargar();
    }

    private string _searchText = string.Empty;
    private string SearchText
    {
        get => _searchText;
        set
        {
            _searchText = value;
            // Al cambiar el texto, aplicamos el filtro inmediatamente.
            AplicarFiltro();
        }
    }

    private void AplicarFiltro()
    {
        // Si la lista original 'clientes' aún no está cargada, salimos.
        if (clientes == null)
        {
            clientesFiltrados = null; // Para seguir mostrando "Cargando..."
            return;
        }

        if (string.IsNullOrWhiteSpace(SearchText))
        {
            // Si el texto de búsqueda está vacío, mostramos todos los clientes.
            clientesFiltrados = clientes.ToList();
        }
        else
        {
            // Si hay texto, filtramos.
            var term = SearchText.Trim().ToLower();
            clientesFiltrados = clientes
                .Where(c =>
                    c.Nombre!.ToLower().Contains(term) || // Usamos '!' si sabes que no será nulo
                    c.Identificacion!.ToLower().Contains(term))
                .ToList();
        }
    }
}