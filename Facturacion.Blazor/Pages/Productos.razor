@page "/productos"
@attribute [Authorize(Roles = "Admin")]
@using Facturacion.Blazor.Models
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Productos</PageTitle>

<h3 class="mb-3">Productos</h3>

<!-- Barra de acciones -->
<div class="d-flex flex-wrap align-items-center gap-2 mb-3">
    <button class="btn btn-primary btn-sm" @onclick="Nuevo">
        <i class="bi bi-box-seam"></i> Nuevo
    </button>
    <button class="btn btn-outline-secondary btn-sm" @onclick="Refrescar">
        <i class="bi bi-arrow-clockwise"></i> Refrescar
    </button>

    <div class="ms-auto"></div>

    <!-- Búsqueda -->
    <div class="input-group" style="max-width:320px">
        <span class="input-group-text"><i class="bi bi-search"></i></span>
        <input class="form-control" placeholder="Buscar..."
               @bind="filtro" @bind:event="oninput" />
    </div>
</div>

<!-- Estado cargando -->
@if (cargando)
{
    <div class="alert alert-info d-flex align-items-center gap-2">
        <span class="spinner-border spinner-border-sm" role="status"></span>
        <span>Cargando…</span>
    </div>
}

<!-- Tabla -->
<div class="table-responsive shadow-sm rounded mb-4">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Stock</th>
                <th>Expiración</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (!Filtrados.Any())
            {
                <tr><td colspan="5" class="text-center text-muted">Sin registros</td></tr>
            }
            else
            {
                @foreach (var p in Filtrados)
                {
                    <tr>
                        <td>@p.Codigo</td>
                        <td>@p.Nombre</td>
                        <td>
                            <span class="badge @StockBadge(p.Stock)">@p.Stock</span>
                        </td>
                        <td>
                            @if (p.FechaExpiracion is null)
                            {
                                <span class="text-muted">—</span>
                            }
                            else
                            {
                                <span class="badge @ExpBadge(p.FechaExpiracion.Value)">
                                    @p.FechaExpiracion.Value.ToString("yyyy-MM-dd")
                                </span>
                            }
                        </td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary" title="Editar" @onclick="() => Editar(p)">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger ms-1" title="Eliminar" @onclick="() => PedirEliminar(p)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (mostrarForm)
{
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3">@tituloForm</h5>

            <EditForm Model="@modelo" OnValidSubmit="@Guardar">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Código</label>
                        <InputText class="form-control" @bind-Value="modelo.Codigo" />
                        <ValidationMessage For="@(() => modelo.Codigo)" />
                    </div>
                    <div class="col-md-8">
                        <label class="form-label">Nombre</label>
                        <InputText class="form-control" @bind-Value="modelo.Nombre" />
                        <ValidationMessage For="@(() => modelo.Nombre)" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Stock</label>
                        <InputNumber class="form-control" @bind-Value="modelo.Stock" />
                        <ValidationMessage For="@(() => modelo.Stock)" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Fecha de expiración</label>
                        <InputDate class="form-control" @bind-Value="modelo.FechaExpiracion" />
                        <ValidationMessage For="@(() => modelo.FechaExpiracion)" />
                    </div>
                </div>

                <div class="d-flex gap-2 mt-3">
                    <button class="btn btn-success" type="submit">
                        <i class="bi bi-check2-circle"></i> Guardar
                    </button>
                    <button class="btn btn-outline-secondary" type="button" @onclick="Cancelar">
                        Cancelar
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

<!-- Modal de confirmación (eliminar) -->
@if (mostrarConfirm)
{
    <div class="modal fade show" tabindex="-1" style="display:block;" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow">
                <div class="modal-header">
                    <h5 class="modal-title">Eliminar producto</h5>
                    <button type="button" class="btn-close" @onclick="CerrarConfirm"></button>
                </div>
                <div class="modal-body">
                    ¿Deseas eliminar <strong>@productoAEliminar?.Nombre</strong> (<code>@productoAEliminar?.Codigo</code>)?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarConfirm">Cancelar</button>
                    <button class="btn btn-danger" @onclick="ConfirmarEliminar">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

<!-- Toast -->
@if (toastVisible)
{
    <div class="toast position-fixed bottom-0 end-0 mb-3 me-3 show text-bg-@toastTipo" role="alert">
        <div class="d-flex">
            <div class="toast-body">@toastMensaje</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="() => toastVisible=false"></button>
        </div>
    </div>
}

@code {
    private List<Producto> productos = new()
    {
        new Producto { Codigo = "PRD-001", Nombre = "Producto Demo", Stock = 15, FechaExpiracion = DateTime.Now.AddMonths(10) },
        new Producto { Codigo = "PRD-002", Nombre = "Vence Pronto", Stock = 3, FechaExpiracion = DateTime.Now.AddDays(20) },
        new Producto { Codigo = "PRD-003", Nombre = "Vencido", Stock = 1, FechaExpiracion = DateTime.Now.AddDays(-3) }
    };

    private bool mostrarForm = false;
    private string tituloForm = "Nuevo producto";
    private Producto modelo = new();

    // Estado cargando
    private bool cargando = false;

    // Filtro
    private string filtro = "";
    private IEnumerable<Producto> Filtrados =>
        string.IsNullOrWhiteSpace(filtro)
            ? productos
            : productos.Where(p =>
                ($"{p.Codigo} {p.Nombre} {p.Stock} {p.FechaExpiracion:yyyy-MM-dd}")
                .Contains(filtro, StringComparison.OrdinalIgnoreCase));

    // Confirmación
    private bool mostrarConfirm = false;
    private Producto? productoAEliminar;

    // Toast
    private bool toastVisible;
    private string toastMensaje = "";
    private string toastTipo = "success"; // success | warning | danger | info

    private void ShowToast(string msg, string tipo = "success")
    {
        toastMensaje = msg;
        toastTipo = tipo;
        toastVisible = true;
        _ = Task.Run(async () =>
        {
            await Task.Delay(2500);
            toastVisible = false;
            await InvokeAsync(StateHasChanged);
        });
    }

    private void Nuevo()
    {
        modelo = new Producto();
        tituloForm = "Nuevo producto";
        mostrarForm = true;
    }

    private void Editar(Producto p)
    {
        modelo = new Producto
        {
            Codigo = p.Codigo,
            Nombre = p.Nombre,
            Stock = p.Stock,
            FechaExpiracion = p.FechaExpiracion
        };
        tituloForm = "Editar producto";
        mostrarForm = true;
    }

    private void PedirEliminar(Producto p)
    {
        productoAEliminar = p;
        mostrarConfirm = true;
    }

    private void CerrarConfirm() => mostrarConfirm = false;

    private void ConfirmarEliminar()
    {
        if (productoAEliminar is not null)
        {
            productos.Remove(productoAEliminar);
            ShowToast("Producto eliminado", "warning");
        }
        mostrarConfirm = false;
        StateHasChanged();
    }

    private void Cancelar() => mostrarForm = false;

    private async Task Refrescar()
    {
        cargando = true;
        StateHasChanged();

        await Task.Delay(600); // Simula llamada al API

        cargando = false;
        StateHasChanged();
        ShowToast("Lista actualizada", "info");
    }

    private void Guardar()
    {
        // Validación rápida
        if (!ValidarProducto(modelo, out var msg))
        {
            ShowToast(msg, "danger");
            return;
        }

        var existe = productos.FirstOrDefault(x => x.Codigo == modelo.Codigo);
        if (existe is null)
        {
            productos.Add(new Producto
            {
                Codigo = modelo.Codigo,
                Nombre = modelo.Nombre,
                Stock = modelo.Stock,
                FechaExpiracion = modelo.FechaExpiracion
            });
            ShowToast("Producto creado");
        }
        else
        {
            existe.Nombre = modelo.Nombre;
            existe.Stock = modelo.Stock;
            existe.FechaExpiracion = modelo.FechaExpiracion;
            ShowToast("Producto actualizado");
        }
        mostrarForm = false;
    }

    // Validación ligera
    private bool ValidarProducto(Producto p, out string error)
    {
        if (string.IsNullOrWhiteSpace(p.Codigo))
        {
            error = "El código es obligatorio.";
            return false;
        }

        if (string.IsNullOrWhiteSpace(p.Nombre))
        {
            error = "El nombre del producto es obligatorio.";
            return false;
        }

        if (p.Stock < 0)
        {
            error = "El stock no puede ser negativo.";
            return false;
        }

        error = "";
        return true;
    }

    // Helpers visuales
    private string StockBadge(int stock)
        => stock <= 0 ? "text-bg-danger"
         : stock < 5 ? "text-bg-warning"
         : "text-bg-success";

    private string ExpBadge(DateTime fecha)
    {
        var hoy = DateTime.Today;
        if (fecha.Date < hoy) return "text-bg-danger";                // vencido
        if ((fecha - hoy).TotalDays <= 30) return "text-bg-warning";  // por vencer
        return "text-bg-success";                                     // ok
    }
}

