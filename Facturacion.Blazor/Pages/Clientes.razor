@page "/clientes"
@using Facturacion.Blazor.Models

<PageTitle>Clientes</PageTitle>

<h3 class="mb-3">Clientes</h3>

<!-- Barra de acciones -->
<div class="d-flex flex-wrap align-items-center gap-2 mb-3">
    <button class="btn btn-primary btn-sm" @onclick="Nuevo">
        <i class="bi bi-person-plus"></i> Nuevo
    </button>
    <button class="btn btn-outline-secondary btn-sm" @onclick="Refrescar">
        <i class="bi bi-arrow-clockwise"></i> Refrescar
    </button>

    <div class="ms-auto"></div>

    <!-- Búsqueda -->
    <div class="input-group" style="max-width:320px">
        <span class="input-group-text"><i class="bi bi-search"></i></span>
        <input class="form-control" placeholder="Buscar..."
               @bind="filtro" @bind:event="oninput" />
    </div>
</div>

<!-- Estado cargando -->
@if (cargando)
{
    <div class="alert alert-info d-flex align-items-center gap-2">
        <span class="spinner-border spinner-border-sm" role="status"></span>
        <span>Cargando…</span>
    </div>
}

<!-- Tabla -->
<div class="table-responsive shadow-sm rounded mb-4">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>CI/RUC</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (!Filtrados.Any())
            {
                <tr><td colspan="6" class="text-center text-muted">Sin registros</td></tr>
            }
            else
            {
                @foreach (var c in Filtrados)
                {
                    <tr>
                        <td>@c.Documento</td>
                        <td>@c.Nombre</td>
                        <td>@c.Correo</td>
                        <td>@c.Telefono</td>
                        <td>@c.Direccion</td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary" title="Editar" @onclick="() => Editar(c)">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger ms-1" title="Eliminar" @onclick="() => PedirEliminar(c)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Formulario -->
@if (mostrarForm)
{
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3">@tituloForm</h5>

            <EditForm Model="@modelo" OnValidSubmit="@Guardar">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">CI/RUC</label>
                        <InputText class="form-control" @bind-Value="modelo.Documento" />
                        <ValidationMessage For="@(() => modelo.Documento)" />
                    </div>
                    <div class="col-md-8">
                        <label class="form-label">Nombre</label>
                        <InputText class="form-control" @bind-Value="modelo.Nombre" />
                        <ValidationMessage For="@(() => modelo.Nombre)" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Correo</label>
                        <InputText class="form-control" @bind-Value="modelo.Correo" />
                        <ValidationMessage For="@(() => modelo.Correo)" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Teléfono</label>
                        <InputText class="form-control" @bind-Value="modelo.Telefono" />
                        <ValidationMessage For="@(() => modelo.Telefono)" />
                    </div>
                    <div class="col-12">
                        <label class="form-label">Dirección</label>
                        <InputText class="form-control" @bind-Value="modelo.Direccion" />
                        <ValidationMessage For="@(() => modelo.Direccion)" />
                    </div>
                </div>

                <div class="d-flex gap-2 mt-3">
                    <button class="btn btn-success" type="submit">
                        <i class="bi bi-check2-circle"></i> Guardar
                    </button>
                    <button class="btn btn-outline-secondary" type="button" @onclick="Cancelar">
                        Cancelar
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

<!-- Modal de confirmación (eliminar) -->
@if (mostrarConfirm)
{
    <div class="modal fade show" tabindex="-1" style="display:block;" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow">
                <div class="modal-header">
                    <h5 class="modal-title">Eliminar cliente</h5>
                    <button type="button" class="btn-close" @onclick="CerrarConfirm"></button>
                </div>
                <div class="modal-body">
                    ¿Deseas eliminar a <strong>@clienteAEliminar?.Nombre</strong>?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarConfirm">Cancelar</button>
                    <button class="btn btn-danger" @onclick="ConfirmarEliminar">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

<!-- Toast -->
@if (toastVisible)
{
    <div class="toast position-fixed bottom-0 end-0 mb-3 me-3 show text-bg-@toastTipo" role="alert">
        <div class="d-flex">
            <div class="toast-body">@toastMensaje</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="() => toastVisible=false"></button>
        </div>
    </div>
}

@code {
    // Demo temporal en memoria. Luego lo conectamos a ClienteApi.
    private List<Cliente> clientes = new()
    {
        new Cliente { Documento="0102030405", Nombre="Cliente Demo", Correo="demo@correo.com", Telefono="0999999999", Direccion="Ambato" }
    };

    private bool mostrarForm = false;
    private string tituloForm = "Nuevo cliente";
    private Cliente modelo = new();

    // Cargando
    private bool cargando = false;

    // Filtro
    private string filtro = "";
    private IEnumerable<Cliente> Filtrados =>
        string.IsNullOrWhiteSpace(filtro)
            ? clientes
            : clientes.Where(c =>
                (c.Documento + " " + c.Nombre + " " + c.Correo + " " + c.Telefono + " " + c.Direccion)
                .Contains(filtro, StringComparison.OrdinalIgnoreCase));

    // Confirmación
    private bool mostrarConfirm = false;
    private Cliente? clienteAEliminar;

    // Toast
    private bool toastVisible;
    private string toastMensaje = "";
    private string toastTipo = "success"; // success | warning | danger | info

    private void ShowToast(string msg, string tipo = "success")
    {
        toastMensaje = msg;
        toastTipo = tipo;
        toastVisible = true;
        _ = Task.Run(async () =>
        {
            await Task.Delay(2500);
            toastVisible = false;
            await InvokeAsync(StateHasChanged);
        });
    }

    private void Nuevo()
    {
        modelo = new Cliente();
        tituloForm = "Nuevo cliente";
        mostrarForm = true;
    }

    private void Editar(Cliente c)
    {
        modelo = new Cliente
        {
            Documento = c.Documento,
            Nombre = c.Nombre,
            Correo = c.Correo,
            Telefono = c.Telefono,
            Direccion = c.Direccion
        };
        tituloForm = "Editar cliente";
        mostrarForm = true;
    }

    private void PedirEliminar(Cliente c)
    {
        clienteAEliminar = c;
        mostrarConfirm = true;
    }

    private void CerrarConfirm() => mostrarConfirm = false;

    private void ConfirmarEliminar()
    {
        if (clienteAEliminar is not null)
        {
            clientes.Remove(clienteAEliminar);
            ShowToast("Cliente eliminado", "warning");
        }
        mostrarConfirm = false;
        StateHasChanged();
    }

    private void Cancelar() => mostrarForm = false;

    private async Task Refrescar()
    {
        cargando = true;
        StateHasChanged();
        await Task.Delay(600); // Simula la llamada al API
        cargando = false;
        StateHasChanged();
        ShowToast("Lista actualizada", "info");
    }

    private void Guardar()
    {
        // Validación ligera antes de guardar
        if (!ValidarCliente(modelo, out var msg))
        {
            ShowToast(msg, "danger");
            return;
        }

        var existe = clientes.FirstOrDefault(x => x.Documento == modelo.Documento);
        if (existe is null)
        {
            clientes.Add(new Cliente
            {
                Documento = modelo.Documento,
                Nombre = modelo.Nombre,
                Correo = modelo.Correo,
                Telefono = modelo.Telefono,
                Direccion = modelo.Direccion
            });
            ShowToast("Cliente creado");
        }
        else
        {
            existe.Nombre = modelo.Nombre;
            existe.Correo = modelo.Correo;
            existe.Telefono = modelo.Telefono;
            existe.Direccion = modelo.Direccion;
            ShowToast("Cliente actualizado");
        }

        mostrarForm = false;
    }

    // Validación básica de CI/RUC y correo
    private bool ValidarCliente(Cliente c, out string error)
    {
        if (string.IsNullOrWhiteSpace(c.Documento) || !(c.Documento.Length == 10 || c.Documento.Length == 13) || !c.Documento.All(char.IsDigit))
        {
            error = "El documento debe tener 10 o 13 dígitos numéricos.";
            return false;
        }

        if (!string.IsNullOrWhiteSpace(c.Correo) &&
            !System.Text.RegularExpressions.Regex.IsMatch(c.Correo, @"^[^@\s]+@[^@\s]+\.[^@\s]+$", System.Text.RegularExpressions.RegexOptions.IgnoreCase))
        {
            error = "Correo no válido.";
            return false;
        }

        error = "";
        return true;
    }
}
