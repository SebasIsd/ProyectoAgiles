@page "/facturas/nueva"
@inject FacturaApiService Api
@inject Facturacion.Blazor.Services.ProductoApi ProductoApiService
@inject AlertService Alert
@inject NavigationManager Nav
@using System.ComponentModel.DataAnnotations
@using Facturacion.Application.DTOs
@using Facturacion.Application.Dtos
@using Facturacion.Domain.Entities
@using System.Net.Http.Json
@using Microsoft.JSInterop
@inject HttpClient Http
@inject IJSRuntime JS

<h3 class="mb-4">Nueva Factura</h3>

<div class="alert alert-warning">
    <small>
        <strong>Estado del sistema:</strong><br />
        Clientes cargados: <strong>@clientes.Count</strong> <br />
        Productos cargados: <strong>@productos.Count</strong> <br />
        Mensaje de error: <span class="text-danger">@mensajeDebug</span>
    </small>
</div>

<EditForm Model="@modelo" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary class="alert alert-danger" />

    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Cliente <span class="text-danger">*</span></label>
                    <div class="mb-2">
                        <button type="button" class="btn btn-primary" @onclick="AbrirModalClientes">
                            <i class="bi bi-person-lines-fill"></i> Buscar Cliente
                        </button>
                    </div>

                    @if (clienteSeleccionado != null)
                    {
                        <div class="alert alert-info p-2">
                            <p class="mb-1"><strong>Nombre:</strong> @clienteSeleccionado.Nombre</p>
                            <p class="mb-1"><strong>ID:</strong> @clienteSeleccionado.Identificacion</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-danger small">Debe seleccionar un cliente.</div>
                    }
                </div>

                <div class="col-md-6">
                    <label class="form-label">Fecha de Emisión</label>
                    <InputDate @bind-Value="modelo.Fecha" class="form-control" />
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center bg-light">
            <strong>Detalle de Productos</strong>
            <button type="button" class="btn btn-sm btn-primary" @onclick="AgregarLinea">
                <i class="bi bi-plus-circle"></i> Agregar producto
            </button>
        </div>
        <div class="card-body p-0">
            @if (!modelo.Detalles.Any())
            {
                <div class="p-5 text-center text-muted">
                    <p>No hay productos. Clic en "Agregar producto".</p>
                </div>
            }
            else
            {
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 40%;">Producto</th>
                            <th style="width: 15%;">Cantidad</th>
                            <th style="width: 15%;">Precio</th>
                            <th style="width: 20%;">Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in modelo.Detalles)
                        {
                            <tr>
                                <td>
                                    <div class="input-group input-group-sm">
                                        <input type="text" class="form-control" readonly
                                               value="@ObtenerNombreProducto(item.ProductoId)"
                                               placeholder="Buscar..." />

                                        <button type="button" class="btn btn-outline-primary"
                                                @onclick="() => AbrirModalProductos(item)">
                                            <i class="bi bi-search"></i>
                                        </button>
                                    </div>
                                </td>
                                <td>
                                    <InputNumber @bind-Value="item.Cantidad" class="form-control form-control-sm"
                                                 min="1" @oninput="() => CalcularTotal()" />
                                </td>
                                <td>$@item.PrecioUnitario.ToString("0.00")</td>
                                <td class="fw-bold">$@((item.Cantidad * item.PrecioUnitario).ToString("0.00"))</td>
                                <td>
                                    <button type="button" class="btn btn-outline-danger btn-sm"
                                            @onclick="() => EliminarLinea(item)">
                                        X
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <div class="row mt-3 justify-content-end">
        <div class="col-md-4">
            <h6>Subtotal: $@modelo.Subtotal.ToString("0.00")</h6>  <!-- Added explicit subtotal/IVA display -->
            <h6>IVA (15%): $@modelo.Iva.ToString("0.00")</h6>
            <h4 class="text-end">TOTAL: $@modelo.Total.ToString("0.00") </h4>
        </div>
    </div>  

    <div class="mt-3 mb-5">
        <button type="submit" class="btn btn-success btn-lg">Guardar Factura</button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@if (mostrarModalClientes)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Buscar Cliente</h5>
                    <button type="button" class="btn-close" @onclick="CerrarModalClientes"></button>
                </div>
                <div class="modal-body">
                    <input type="text" class="form-control mb-3"
                           placeholder="Escriba nombre o cédula..."
                           @bind="busquedaCliente"
                           @bind:event="oninput" />

                    <div class="list-group" style="max-height: 300px; overflow-y: auto;">
                        @if (clientesFiltrados.Any())
                        {
                            @foreach (var c in clientesFiltrados)
                            {
                                <button type="button" class="list-group-item list-group-item-action"
                                        @onclick="() => SeleccionarCliente(c)">
                                    <strong>@c.Nombre</strong> - <small>@c.Identificacion</small>
                                </button>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                No se encontraron resultados.
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarModalClientes">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}

@if (mostrarModalProductos)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Buscar Producto</h5>
                    <button type="button" class="btn-close" @onclick="CerrarModalProductos"></button>
                </div>
                <div class="modal-body">
                    <input type="text" class="form-control mb-3"
                           placeholder="Escriba nombre, código o marca..."
                           @bind="BusquedaProductoProp"
                           @bind:event="oninput" />

                    <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                        <table class="table table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Marca/Modelo</th>
                                    <th>Stock</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (productosFiltrados.Any())
                                {
                                    @foreach (var p in productosFiltrados)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@p.Nombre</strong><br />
                                                <small class="text-muted">@p.Codigo</small>
                                            </td>
                                            <td>@p.Marca - @p.Modelo</td>
                                            <td>
                                                @if (p.StockTotal > 0)
                                                {
                                                    <span class="badge bg-success">@p.StockTotal</span>
                                                }
                                                else
                                                {

                                                    <span class="badge bg-danger">0</span>
                                                }
                                            </td>
                                            <td>
                                                <button type="button"
                                                        class="btn btn-sm @(p.StockTotal > 0 ? "btn-primary" : "btn-secondary")"
                                                        disabled="@(p.StockTotal <= 0)"
                                                        @onclick="() => SeleccionarProducto(p)">

                                                    @(p.StockTotal > 0 ? "Seleccionar" : "Agotado")
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="4" class="text-center">No se encontraron productos.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarModalProductos">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private Modelo modelo = new();
    private List<Cliente> clientes = new();
    private List<ProductoListaDto> productos = new();
    private Cliente? clienteSeleccionado;
    private bool mostrarModalClientes = false;
    private string _busquedaCliente = string.Empty;
    private List<Cliente> clientesFiltrados = new();
    private bool mostrarModalProductos = false;
    private string _busquedaProducto = string.Empty;
    private List<ProductoListaDto> productosFiltrados = new();
    private DetalleModel? detalleEnEdicion;
    private string mensajeDebug = "Iniciando...";


    protected override async Task OnInitializedAsync()
    {
        try
        {
            mensajeDebug = "Cargando desde API...";
            clientes = await Http.GetFromJsonAsync<List<Cliente>>("api/clientes") ?? new();
            clientesFiltrados = clientes;
            productos = await ProductoApiService.ListarAsync() ?? new();
            productosFiltrados = productos;
            mensajeDebug = "Carga exitosa.";
        }
        catch (Exception ex)
        {
            mensajeDebug = $"ERROR CRÍTICO: {ex.Message}";
            await Alert.Error("Error conectando con la API: " + ex.Message);
        }
    }

    // Cliente logic (unchanged, but using AlertService if needed)

    public string busquedaCliente
    {
        get => _busquedaCliente;
        set
        {
            _busquedaCliente = value;
            FiltrarClientes();
        }
    }

    private void FiltrarClientes()
    {
        if (string.IsNullOrWhiteSpace(_busquedaCliente))
        {
            clientesFiltrados = clientes;
        }
        else
        {
            var term = _busquedaCliente.ToLower();
            clientesFiltrados = clientes.Where(c =>
                (c.Nombre?.ToLower().Contains(term) ?? false) ||
                (c.Identificacion?.ToLower().Contains(term) ?? false)
            ).ToList();
        }
    }

    private void AbrirModalClientes() { busquedaCliente = ""; mostrarModalClientes = true; }
    private void CerrarModalClientes() => mostrarModalClientes = false;
    private void SeleccionarCliente(Cliente c) { clienteSeleccionado = c; modelo.ClienteId = c.Id; CerrarModalClientes(); }

    // Producto logic (unchanged except calling CalcularTotal())

    public string BusquedaProductoProp
    {
        get => _busquedaProducto;
        set
        {
            _busquedaProducto = value;
            FiltrarProductos();
        }
    }

    private void FiltrarProductos()
    {
        if (string.IsNullOrWhiteSpace(_busquedaProducto))
        {
            productosFiltrados = productos;
        }
        else
        {
            var term = _busquedaProducto.ToLower();
            productosFiltrados = productos.Where(p =>
                (p.Nombre?.ToLower().Contains(term) ?? false) ||
                (p.Codigo?.ToLower().Contains(term) ?? false) ||
                (p.Marca?.ToLower().Contains(term) ?? false)
            ).ToList();
        }
    }

    private void AbrirModalProductos(DetalleModel item) { detalleEnEdicion = item; BusquedaProductoProp = ""; mostrarModalProductos = true; }
    private void CerrarModalProductos() { mostrarModalProductos = false; detalleEnEdicion = null; }

    private async Task SeleccionarProducto(ProductoListaDto p)
    {
        if (detalleEnEdicion != null)
        {
            detalleEnEdicion.ProductoId = p.Id;
            if (p.PrecioVentaActual > 0)
                detalleEnEdicion.PrecioUnitario = p.PrecioVentaActual;
            else
                await CargarPrecioDesdeLote(detalleEnEdicion);
        }
        CerrarModalProductos();
        CalcularTotal();  // Ensure total updates after selection
        await CargarPrecioDesdeLote(detalleEnEdicion!);
    }

    private string ObtenerNombreProducto(int id)
    {
        var prod = productos.FirstOrDefault(p => p.Id == id);
        return prod != null ? prod.Nombre : "";
    }

    private void AgregarLinea() { modelo.Detalles.Add(new DetalleModel()); CalcularTotal(); }
    private void EliminarLinea(DetalleModel item) { modelo.Detalles.Remove(item); CalcularTotal(); }

    private async Task CargarPrecioDesdeLote(DetalleModel item)
    {
        if (item.ProductoId > 0)
        {
            try
            {
                var lote = await Http.GetFromJsonAsync<ProductoLote>($"api/productos/{item.ProductoId}/lote-fifo");
                if (lote != null) item.PrecioUnitario = lote.PrecioVenta;
                else item.PrecioUnitario = 0;
            }
            catch { item.PrecioUnitario = 0; }
        }
        CalcularTotal();  // Update after price load
    }

    private void CalcularTotal()
    {
        modelo.Subtotal = modelo.Detalles.Sum(d => d.Cantidad * d.PrecioUnitario);
        modelo.Iva = Math.Round(modelo.Subtotal * 0.15m, 2);
        modelo.Total = modelo.Subtotal + modelo.Iva;
        StateHasChanged();  // Force re-render
    }

    private async Task Guardar()
    {
        if (modelo.ClienteId == 0)
        {
            await Alert.Error("Debe seleccionar un cliente.");
            return;
        }
        if (!modelo.Detalles.Any() || modelo.Detalles.All(d => d.ProductoId == 0))
        {
            await Alert.Error("Debe agregar al menos un producto.");
            return;
        }

        var confirmado = await Alert.Confirm("¿Generar factura?", $"Total: $${modelo.Total:0.00}");
        if (!confirmado) return;

        try
        {
            var dto = new CrearFacturaDto
            {
                ClienteId = modelo.ClienteId,
                Detalles = modelo.Detalles.Where(d => d.ProductoId > 0).Select(d => new CrearFacturaDetalleDto
                {
                    ProductoId = d.ProductoId,
                    Cantidad = d.Cantidad
                }).ToList()
            };

            var response = await Http.PostAsJsonAsync("api/facturas", dto);
            if (!response.IsSuccessStatusCode) throw new Exception(await response.Content.ReadAsStringAsync());

            await Alert.Success("Factura guardada correctamente.");
            Nav.NavigateTo("/facturas");
        }
        catch (Exception ex)
        {
            await Alert.Error("Error al guardar: " + ex.Message);
        }
    }

    protected void Cancelar() => Nav.NavigateTo("/facturas");

    public class Modelo
    {
        public int ClienteId { get; set; }
        public DateTime Fecha { get; set; } = DateTime.Today;
        public List<DetalleModel> Detalles { get; set; } = new();
        public decimal Subtotal { get; set; }
        public decimal Iva { get; set; }
        public decimal Total { get; set; }
    }

    public class DetalleModel
    {
        public int ProductoId { get; set; }
        public int Cantidad { get; set; } = 1;
        public decimal PrecioUnitario { get; set; }
    }
}